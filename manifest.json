{
  "manifest_version": 2,
  "name": "HenHacks 2026",
  "version": "1.0",

  "description": "Enlarges Text",
  "permissions": [
  	"downloads",
	"https://cdn-ak-img.shonenjumpplus.com/*",
  "http://127.0.0.1:5001/*"
  ],

  "icons": {
    "48": "icons/book.png"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "download_pages.js",
        "process_manga.js",
        "display_img.js",
        "main.js"
      ]
    }
  ]
}
